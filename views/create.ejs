<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" 
    href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="style.css" rel="stylesheet">
    <title>Host Create</title>
</head>
<body>
  <%- include ('partial/nav') %>
  <%- title %>

  <!-- we will create a form to send data to backend and store into the database -->
  <div class="create-products content">
    <form action="/add" method="post" style="display: inline-grid;">
       <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="productName">
            <label for="image">Image</label>
            <input type="text" id="image" name="image" placeholder="Image-URL">
            <label for="price">Price (CAD)</label>
            <input type="number" id="price" name="price" placeholder="productPrice">
  
      <button>Submit</button>
    </form>
  </div>   

  <section class="show">
    <table class="table">
        <tr>
        <th>Name</th>
        <th>image`</th>
        <th>price</th>
    </tr>
    <% add.forEach(function(product){ %>
        <tr> <td> <h4><%= product.name %></h4> </td>    
        <td><img src="<%= product.image %>" alt="" style="width: 100px;height: 100px;"> </td>
        <td><h5><%=product.price%></h5></td>
        <td><a class="btn btn-warning" href="/product/<%= product._id %>">EDIT </a></td>
        <td><form action="delete/<%=product._id%>" method="POST"><button class="btn btn-danger">Delete</button></form></td>
        </tr>
    <% }) %>
</table>
</section> 

</body>